@addTagHelper *, MiniProfiler.AspNetCore.Mvc

@{
    bool isForm = ViewBag.IsForm ?? false;
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit|ie-comp|ie-stand" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="Bookmark" href="/favicon.ico">
    <link rel="Shortcut Icon" href="/favicon.ico" />

    <!--[if lt IE 9]>
    <script src="~/lib/html5shiv.js"></script>
    <script src="~/lib/respond.min.js"></script>
    <![endif]-->
    <!--[if IE 6]>
    <script src="~/lib/DD_belatedPNG_0.0.8a-min.js"></script>
        <script>DD_belatedPNG.fix('*');</script>
        <![endif]-->
    <title>@(ViewBag.Title)</title>
    <meta name="keywords" content="浙江广安科贸有限公司" />
    <meta name="description" content="后台管理系统" />
    @*<link href="~/lib/layer/theme/default/layer.css" rel="stylesheet" />*@
    @*<link href="~/layui/css/layui.css" rel="stylesheet" />*@
    <link href="~/layuiadmin/layui/css/layui.css" rel="stylesheet" />
    @*<link href="~/layuiadmin/style/admin.css" rel="stylesheet" />*@
    <style type="text/css">
        .layui-body {
            left: 0px;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 10px;
            padding-bottom: 0px;
        }

        .layui-laypage-curr .layui-laypage-em {
            background-color: #1E9FFF !important;
        }

        .layui-table-view .layui-table[lay-size=sm] .layui-table-cell {
            height: 24px !important;
            line-height: 22px;
        }

        .layui-layer-adminRight {
            top: 0px !important;
        }
    </style>
    <link href="~/css/global.css" rel="stylesheet" />
    @*<link href="~/css/globalnew.css" rel="stylesheet" />*@

    @if (isForm)
    {
        <link href="~/lib/my97/skin/WdatePicker.css" rel="stylesheet" />
    }
    @RenderSection("styles", false)

    <script src="~/js/base/jquery-1.11.3.min.js"></script>
    <script src="~/js/base/banana.js"></script>
    <script src="~/lib/layer/layer.js"></script>
    <script src="~/layui/layui.js"></script>
    @*<script src="~/layuiadmin//layui/layui.js"></script>*@

    <!-- 让IE8/9支持媒体查询，从而兼容栅格 -->
    <!--[if lt IE 9]>
      <script src="~/js/base/html5.min.js"></script>
      <script src="~/js/base/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <mini-profiler />
    <div class="layui-body">
        <!-- 内容主体区域 -->
        @RenderBody()
    </div>

    <style>
        .layui-table[lay-skin=line] {
            border-width: 0 0 0 0 !important;
            width: 100%;
        }
    </style>
    @if (isForm)
    {

        <script src="~/js/base/jquery.form.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

        <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
        <script src="~/lib/jquery-validation/dist/messages_zh.js"></script>
        <script src="~/lib/my97/WdatePicker.js"></script>
    }
    @RenderSection("scripts", false)
</body>
</html>